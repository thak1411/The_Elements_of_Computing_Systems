/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    Not(in = sel, out = notSel);
    And(a = notSel, b = a, out = ra);
    And(a = sel, b = b, out = rb);
    Or(a = ra, b = rb, out = out);
}